@using Models
@model Presupuestos

@if(ViewBag.ErrorMessage != null){
    <div class="error-message">
        <p>@ViewBag.ErrorMessage</p>
    </div>
}

<h3>Creacion de nuevo presupuesto</h3>
<form asp-controller="Presupuestos" asp-action="CrearPresupuesto" method="post" class="form container mt-4">
    <div class="form-group">
        <label asp-for="NombreDestinatario" class="form-label">Nombre del Cliente</label>
        <input type="text" asp-for="NombreDestinatario"  class="form-control" required />
        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaCreacion" class="form-label">Fecha de Creaci√≥n</label>
        <input asp-for="FechaCreacion" type="date-local" class="form-control" value="@DateTime.Now.Date.ToString("dd-MM-yyyy")" required />
        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Crear</button>
        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
    </div>
</form>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}