@using Models
@model Presupuestos

@if (ViewBag.ErrorMessage != null)
{
    <div class="error-message">
        <p>@ViewBag.ErrorMessage</p>
    </div>
}

<div class="container mt-4">
    <div class="mb-4">
        <h2 class="text-center">Eliminacion de Presupuesto n°@Model.IdPresupuesto </h2>
        <p class="text-center">Nombre Destinatario: @Model.NombreDestinatario</p>
        <p class="text-center">Fecha de Creación: @Model.FechaCreacion.ToString("dd/MM/yyyy")</p>
    </div>
    <h3 class="text-center">¿Desea eliminar el presupuesto?</h3>
    <form asp-action="EliminarPresupuesto" action="post">
        <input type="hidden" asp-for="IdPresupuesto" />
        <div class="text-center">
            <input type="submit" value="Eliminar" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-danger">Cancelar</a>
        </div>
    </form>
</div>