@using Models
@model List<Productos>

@if (ViewBag.ErrorMessage != null)
{
    <div class="error-message">
        <p>@ViewBag.ErrorMessage</p>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<h1>Lista de Productos</h1>
@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Acci√≥n</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.IdProducto</td>
                    <td>@producto.Descripcion</td>
                    <td>$@String.Format("{0:N0}", producto.Precio)</td>
                        <td>
                            <a asp-controller="Productos" asp-action="ModificarProducto" asp-route-id="@producto.IdProducto"
                                class="btn btn-secondary"> Modificar</a>
                            <a asp-controller="Productos" asp-action="DeleteProducto" asp-route-id="@producto.IdProducto"
                                class="btn btn-danger"> Borrar</a>
                        </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 class="text-center text-muted">SIN PRODUCTOS</h2>
}
<div class="text-center">
    <a asp-controller="Productos" asp-action="AltaProducto" class="btn btn-primary">Agregar Producto</a>
</div>