@using Models
@model Productos

@if(ViewBag.ErrorMessage != null){
    <div class="error-message">
        <p>@ViewBag.ErrorMessage</p>
    </div>
}

<h2 class="text-center">Modificar Producto nÂ° @Model.IdProducto</h2>
<form asp-controller="Productos" asp-action="ModificarProducto" method="post" class="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Descripcion">Descripcion</label>
        <input type="text" asp-for="Descripcion" value="@Model.Descripcion" class="form-control" required>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Precio">Precio</label>
        <input type="numeric" asp-for="Precio" value="@Model.Precio" class="form-control" required>
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="IdProducto" value="@Model.IdProducto">
    <div class=" mt-3">
        <button type="submit" class="btn btn-primary">Modificar</button>
        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
    </div>
</form>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}